# Cross-platform formatting config
# See https://EditorConfig.org

# top-most EditorConfig file
root = true

# Defaults
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space

# 2 space indentation
[{*.{js,ts,json,css,scss,html,jsx,tsx,yml,yaml,svelte},.babelrc}]
indent_size = 2

# 4 space indentation
[*.{md}]
indent_size = 4
max_line_length = 100
